# 環境変数設定ファイル（例）
# このファイルをコピーして .env という名前で保存し、実際の値を入力してください

# ===========================================
# API設定
# ===========================================

# Google Gemini AI API キー
# https://makersuite.google.com/app/apikey から取得
GEMINI_API_KEY=AIzaSyBu9Al3y29cRz-XBt3S2PvEDN0VWg6-RvE

# Alpha Vantage API キー（株価データ取得用）
# https://www.alphavantage.co/support/#api-key から取得
ALPHA_VANTAGE_API_KEY=AQU6KR3GK5OU6OVS

# Financial Modeling Prep API キー（財務データ取得用）
# https://financialmodelingprep.com/developer/docs から取得
FMP_API_KEY=your_fmp_api_key_here

# ===========================================
# アプリケーション設定
# ===========================================

# 実行環境（development, production）
NODE_ENV=development

# ログレベル（error, warn, info, debug）
LOG_LEVEL=info

# 自動実行の設定
AUTO_RUN_ENABLED=false
ANALYSIS_SCHEDULE=0 15 * * 1-5  # 平日15時に実行

# ===========================================
# データ設定
# ===========================================

# データ保存場所
DATA_OUTPUT_DIR=./live_data
ARCHIVE_DATA_DIR=./archive_data

# 分析対象銘柄（カンマ区切り）
TARGET_SYMBOLS=SPY,QQQ,VIX,TLT,GLD

# ===========================================
# 通知設定
# ===========================================

# 通知機能の有効化
NOTIFICATIONS_ENABLED=false

# Slack通知（オプション）
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Discord通知（オプション）
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# ===========================================
# セキュリティ設定
# ===========================================

# APIリクエストのタイムアウト（ミリ秒）
API_TIMEOUT=30000

# リトライ回数
MAX_RETRIES=3

# レート制限（1分間のリクエスト数）
RATE_LIMIT_PER_MINUTE=60